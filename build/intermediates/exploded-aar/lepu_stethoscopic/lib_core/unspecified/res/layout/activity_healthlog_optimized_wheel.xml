<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <!--android:background="@color/lib_color_white"-->

    <com.core.lib.ui.wheel.WheelView
        android:id="@+id/wheelview_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

    <LinearLayout
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/left_title"
        android:layout_width="0dp"
        android:background="#F6F6F6"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/textview_sporttitle"
            android:layout_width="fill_parent"
            android:text="运动类型"
            android:textSize="@dimen/lib_text_small"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textview_sporttips"
            android:text="健身运动,太极,钓鱼"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:background="@color/lib_color_listview_divider"
        android:layout_height="fill_parent" />

    <com.core.lib.ui.wheel.WheelView
        android:id="@+id/wheelview_content_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <ImageView
        android:layout_width="1dp"
        android:background="@color/lib_color_listview_divider"
        android:layout_height="fill_parent" />

    <com.core.lib.ui.wheel.WheelView
        android:id="@+id/wheelview_content_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />
</LinearLayout><!-- From: file:/D:/Stethoscope/Stethoscope/lepu_stethoscopic/lib_core/res/layout/activity_healthlog_optimized_wheel.xml -->