<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.lepu.stethoscopic.widget.CommonTopBar
        android:id="@+id/commonbatr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_phone"
        style="@style/edit_style"
        android:gravity="center"
        android:background="@color/bg_f3f3f3"
        android:inputType="number"
        android:hint="手机号" />

    <LinearLayout
        android:id="@+id/layout_renewPwd"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edt_username"
            android:hint="用户名"
            style="@style/edit_style" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_eeee"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edt_sex"
            android:hint="性别"
            style="@style/edit_style" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_eeee"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edt_age"
            android:hint="年龄"
            style="@style/edit_style" />

        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_login"
            android:text="@string/notify"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/blueelector"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>