<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout
        android:id="@+id/relLayout_title"
        style="@style/title">

        <include layout="@layout/include_back" />

        <TextView
            style="@style/txt_title"
            android:text="@string/perfect_info" />

        <TextView
            style="@style/txt_title_right"
            android:text="@string/next" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/imgView_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_launcher"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/edt_name"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgView_header"
        android:background="@drawable/bg_edit"
        android:hint="请输入您的姓名"
        android:textColorHint="@color/txt_hint"
        android:textColor="@color/txt_normal"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/edt_name"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:text="请选择您的年龄"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/layout_date"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_name"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/year"
            android:textSize="20sp"
            android:text="年"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_year"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_month"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/month"
            android:layout_toRightOf="@+id/txt_month"
            android:textSize="20sp"
            android:text="月"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_day"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/day"
            android:layout_toRightOf="@+id/txt_day"
            android:textSize="20sp"
            android:text="日"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
