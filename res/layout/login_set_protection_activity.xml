<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f3f3f3"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relLayout_title"
        style="@style/title">

        <include layout="@layout/include_back" />

        <TextView
            style="@style/txt_title"
            android:text="@string/protection_title" />

        <!--<TextView-->
        <!--style="@style/txt_title_right"-->
        <!--android:text="@string/login" />-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_renewPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_phone"
            style="@style/edit_style"
            android:background="@color/bg_f3f3f3"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11" />

        <RelativeLayout
            android:id="@+id/layout_spiner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择问题1"
                android:textColor="@color/fontcolor44"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/ic_launcher" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_eeee" />

        <EditText
            android:id="@+id/edt_a1"
            style="@style/edit_style"
            android:hint="填写答案"
            android:textColor="@color/fontcolor44" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_eeee" />

        <RelativeLayout
            android:id="@+id/layout_spiner_q2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择问题2"
                android:textColor="@color/fontcolor44"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/ic_launcher" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_eeee" />

        <EditText
            android:id="@+id/edt_a2"
            style="@style/edit_style"
            android:hint="填写答案" />

        <EditText
            android:id="@+id/edt_newPwd"
            style="@style/edit_style"
            android:layout_marginTop="15dp"
            android:hint="密码"
            android:inputType="textPassword" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_eeee" />

        <EditText
            android:id="@+id/edt_age"

            style="@style/edit_style"
            android:hint="确认密码"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_launcher"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>